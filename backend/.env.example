# Server Configuration
NODE_ENV=production
PORT=5000
API_VERSION=v1

# Database Configuration
MONGODB_URI=mongodb://username:password@localhost:27017/serene-wellbeing?authSource=admin
# Alternative for MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/serene-wellbeing?retryWrites=true&w=majority

# Redis Configuration
REDIS_URL=redis://:password@localhost:6379

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-min-32-chars-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-min-32-chars-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Google Gemini AI
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-2.0-flash-exp

# Stripe Payment
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_API_VERSION=2023-10-16

# Email Configuration (Gmail/SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_FROM=Serene Wellbeing <noreply@serene-wellbeing.com>

# Frontend URL (for CORS and email links)
FRONTEND_URL=https://serene-wellbeing.com

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=your-session-secret-min-32-chars
SESSION_DURATION_MINUTES=60
BOOKING_BUFFER_MINUTES=15

# Commission Settings
PLATFORM_COMMISSION_RATE=0.20
EXPERT_PAYOUT_DAY=1

# Notification Settings
NOTIFICATION_REMINDER_HOURS=24

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Socket.IO Configuration
SOCKET_IO_CORS_ORIGIN=https://serene-wellbeing.com

# Cron Jobs
ENABLE_CRON_JOBS=true

# Security
BCRYPT_ROUNDS=12
HELMET_CSP_ENABLED=true

# Application
APP_NAME=Serene Wellbeing Hub
APP_VERSION=1.0.0
SUPPORT_EMAIL=support@serene-wellbeing.com

# Monitoring (Optional)
SENTRY_DSN=
SENTRY_ENVIRONMENT=production

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=
